{
  "name": "@node-zugferd/core",
  "version": "0.1.1-beta.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jslno/node-zugferd",
    "directory": "packages/core"
  },
  "scripts": {
    "build": "tsdown",
    "test": "vitest --typecheck",
    "dev": "tsdown --watch",
    "typecheck": "tsc --project tsconfig.json"
  },
  "exports": {
    ".": {
      "dev-source": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./error": {
      "dev-source": "./src/error/index.ts",
      "import": {
        "types": "./dist/error/index.d.ts",
        "default": "./dist/error/index.js"
      },
      "require": {
        "types": "./dist/error/index.d.cts",
        "default": "./dist/error/index.cjs"
      }
    },
    "./utils": {
      "dev-source": "./src/utils/index.ts",
      "import": {
        "types": "./dist/utils/index.d.ts",
        "default": "./dist/utils/index.js"
      },
      "require": {
        "types": "./dist/utils/index.d.cts",
        "default": "./dist/utils/index.cjs"
      }
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "dist/index.d.ts"
      ],
      "./error": [
        "dist/error/index.d.ts"
      ],
      "./utils": [
        "dist/utils/index.d.ts"
      ]
    }
  },
  "peerDependenciesMeta": {
    "@cantoo/pdf-lib": {
      "optional": true
    }
  },
  "peerDependencies": {
    "@cantoo/pdf-lib": "catalog:"
  },
  "devDependencies": {
    "tsdown": "catalog:",
    "zod": "catalog:"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "fast-xml-parser": "catalog:"
  },
  "files": [
    "dist"
  ]
}
